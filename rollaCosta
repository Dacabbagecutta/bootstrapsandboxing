  <script>
    
    var elementPosition = $('.secondBox').offset();

    $(window).scroll(function () {
      if ($(window).scrollTop() > elementPosition.top) {
          $('.secondBox').css('position', 'fixed').css('top', '0').css("marginLeft","7%");

      } else {
        $('.secondBox').css('position', 'static');
      }
});
    
